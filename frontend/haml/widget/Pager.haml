.jr_pager
  .buttons
    {% if current_page > 0 %}
    %a{:href => "?page={{current_page-1}}"} 上一页
    %a{:href => "?page=0"} 1
    {% else %}
    %span 上一页
    %span 1
    {% endif %}
    {% if page_begin > 1 %}
    %span ...
    {% endif %}
    {% for i in range(page_begin,page_end) %}
    {% if i == current_page %}
    %span {{i+1}}
    {% else %}
    %a{:href => "?page={{i}}"} {{i+1}}
    {% endif %}
    {% endfor %}
    {% if page_end < page_count -1 %}
    %span ...
    {% endif %}
    {% if page_count > 1 %}
    {% if current_page < page_count -1 %}
    %a{:href => "?page={{page_count-1}}"} {{page_count}}
    {% else %}
    %span {{page_count}}
    {% endif %}
    {% endif %}
    {% if current_page < page_count -1 %}
    %a{:href => "?page={{current_page+1}}"} 下一页
    {% else %}
    %span 下一页
    {% endif %}
  .hints
    共{{total_count}}个，当前第{{current_page + 1}}/{{page_count}}页
